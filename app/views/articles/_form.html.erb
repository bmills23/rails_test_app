<!--Specifying model as the instance variable lets rails know to render specific article-->
<%= form_with(model: @article, local: true) do |f| %>

<p>
    <%= f.label :title %>
    <%= f.text_field :title %>
</p>

<p>
    <%= f.label :description %>
    <%= f.text_area :description %>
</p>

<p>
    <%= f.submit %>
</p>
<% end %>